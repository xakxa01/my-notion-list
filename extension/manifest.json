{
  "manifest_version": 3,
  "name": "My Notion List",
  "version": "1.0.0",
  "description": "Save selected text as a new page in your Notion data sources with optional templates.",
  "permissions": [
    "contextMenus",
    "storage",
    "notifications",
    "identity"
  ],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://my-notion-list.vercel.app/*"
  ],
  "icons": {
    "16": "icon-16.svg",
    "32": "icon-32.svg",
    "48": "icon-48.svg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "My Notion List",
    "default_icon": {
      "16": "icon-16.svg",
      "32": "icon-32.svg",
      "48": "icon-48.svg"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "scripts": [
      "background.js"
    ]
  }
}
